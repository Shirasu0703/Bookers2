<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/630024ec13.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  
  <body class="<%= controller_name == 'devise/sessions' || controller_name == 'devise/registrations' ? '' : 'd-flex_column vh-100' %>">

    <header class="shadow-sm bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">

          <%= link_to 'Bookers', root_path, class: 'nav-brand p-4 text-white' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>

                <li class="nav-item">
                  <%= link_to user_path(current_user), class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-home me-2"></i>
                    Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path, class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-users me-2"></i>
                    Users
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to books_path, class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-book-open me-2"></i>
                    Books
                  <% end %>
                </li>
                <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white d-flex align-items-center' do %>
                  <i class="fa-solid fa-sign-out-alt me-2"></i>
                  Log out
                <% end %>
              </li>

              <% else %>
                <li class="nav-item">
                  <%= link_to root_path, class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-home me-2"></i>
                    Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-link me-2"></i>
                    About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: 'nav-link text-white d-flex align-items-center' do %>
                    <i class="fa-solid fa-user-plus me-2"></i>
                    Sign up
                  <% end %>
                </li>
                <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-white d-flex align-items-center' do %>
                  <i class="fa-solid fa-sign-in-alt me-2"></i>
                  Log in
                <% end %>
                </li>
              <% end %>
            </ul>
            </div>

        </div>
      </nav>
    </header>

    <div class="container my-5">

        <% if user_signed_in? && !(controller_name == 'homes, edit' && action_name == 'top, edit') %>
          <% flash.each do |message_type, message| %>
            <div class="flash-message <%= message_type %>"><%= message %></div>
          <% end %>
 
        
      <% else %>
       
        <% flash.each do |message_type, message| %>
          <div class="flash-message <%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
    <% end %>
      </div>

    <footer class="mt-5 py-3">
      <div class="container text-center">
        <p class="mb-0 ">CopyRight Infratop.inc</p>
      </div>
    </footer>

  </body>
</html>

