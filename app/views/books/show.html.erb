<div>
  <%= image_tag @book.get_image %>
  <p>Title<%= @book.title %></p>
  <p>Body<%= @book.body %></p>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p><%= @book.user.name %></p>
  <%if @book.user == current_user %>
    <%= link_to "destroy", post_image_path(@book), method: :delete %>
  <% end %>
</div>
