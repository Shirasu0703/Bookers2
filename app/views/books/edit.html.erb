<h1>Editing Book</h1>

  <%= form_with model: @book, local: true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <p><%= f.submit "Update Book" %></p>
  <% end %>


<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", users_path %>