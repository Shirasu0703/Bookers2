


<div class="row justify-content-center">
  <div class="col-md-10 ">
    <h1 class="text-center md-4">Editing Book</h1>

    <%= form_with model: @book, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :title, "Title", class: "form-label" %>
        <%= f.text_field :title, class: "form-control form-control-lg" %>
      </div>

      <div class="mb-3">
        <%= f.label :body, "Opinion", class: "form-label" %>
        <%= f.text_area :body, class: "form-control", rows: 10 %>
      </div>

      <div class="mb-3 text-center">
        <%= f.submit "Update Book", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Show", book_path(@book), class: "btn btn-link" %> |
      <%= link_to "Back", books_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
