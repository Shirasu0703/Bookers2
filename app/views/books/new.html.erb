<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">User info</h5>
      <div class="form-body p-4">
        <% if @book.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @book.errors.count %>件のエラーが発生しました
            </h6>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @book do |f| %>
          <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          <% if user_signed_in? && !(controller_name == 'homes' && action_name == 'top') %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
          </div>
          <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "Opinion" %>
          <hr>
          <%= f.submit 'Create Book', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>