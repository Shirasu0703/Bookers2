
  <div class="row">

    <div class="col-md-3 col-lg-2">
      <%= render 'layouts/sidebar_form', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1 col-lg-9 px-md-4">
      <h2>Books</h2>
        <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.compact.each do |book| %>
            <% next if book.id.nil? %>
            <tr>
              <td class="text-center">
                <%= image_tag book.user.get_profile_image(50,50), class: "rounded-circle mb-1" %>
              <div>
                <%= link_to book.user.name, user_path(book.user), class: "text-decoration-none" %>
              </div>
            </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>