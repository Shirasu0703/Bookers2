<% if user_signed_in? && !(controller_name == 'homes' && action_name == 'top') %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <% if @show_page %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <% if book.user.profile_image.attached? %>
            <%= image_tag book.user.profile_image.variant(resize_to_fill: [50,50]), class: "rounded-circle" %>
          <% else %>
            <%= image_tag "default.png", size: "50x50", class: "rounded-circle" %>
          <% end %>
          <p><%= book.user.name if @show_page %></p>
        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <% if @show_page %>
          <td>
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-primary" %>
            <%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>



